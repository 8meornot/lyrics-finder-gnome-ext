<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
  <schema id="org.gnome.shell.extensions.lyrics-finder"
      path="/org/gnome/shell/extensions/lyrics-finder/">
    <key type="b" name="remove-extras">
     	<default>false</default>
    	<summary>Remove parenthesis, brakets, ...</summary>
      	<description>Remove anything between parenthesis, brakets, ... in title and artist of music</description>
    </key>
	  
	<key type="s" name="panel-pos">
     	<default>'right'</default>
    	<summary>Position on panel.</summary>
      	<description>Sets the position of the extension on the panel. Possible values are: Left, Center, Right.</description>
    </key>
	  
	<key type="s" name="text-align">
     	<default>'center'</default>
    	<summary>Lyrics Text Align</summary>
      	<description>Sets the lyrics text alignment. Possible values are: Left, Center, Right.</description>
    </key>
	  
	<key type="i" name="text-size">
     	<default>14</default>
    	<summary>Lyrics text size</summary>
      	<description>Sets the lyrics text size.</description>
    </key>
	  
	<key type="i" name="image-size">
     	<default>150</default>
		<range min="80" max="250"/>
    	<summary>Album image size</summary>
      	<description>Sets the album image size. from 80 to 250</description>
    </key>

	<key type="b" name="enable-album-cover">
     	<default>true</default>
    	<summary>Enable album cover image</summary>
      	<description>Enable album cover image</description>
    </key>
	  
	<key type="i" name="search-limit">
     	<default>10</default>
		 <range min="5" max="20"/>
    	<summary>Search limit</summary>
      	<description>Sets the search results limit. from 5 to 20</description>
    </key>

	<key type="s" name="font-name">
     	<default>'Cantarell'</default>
    	<summary>Lyrics font name</summary>
      	<description>Lyrics font name</description>
    </key>	
	
	<key type="b" name="auto-search">
     	<default>true</default>
    	<summary>Auto seacrh</summary>
      	<description>Search lyrics automatically while playing a song</description>
    </key>	

	<key type="b" name="save-lyrics">
     	<default>true</default>
    	<summary>Save lyrics</summary>
      	<description>Save lyrics for offline use</description>
    </key>

	<key type="i" name="panel-width">
     	<default>400</default>
		<range min="250" max="600"/>
    	<summary>Panel width</summary>
      	<description>Sets panel width from 250 to 600, default is 400.</description>
    </key>	

  </schema>
</schemalist>

